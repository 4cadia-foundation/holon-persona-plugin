{
  "name": "__MSG_appName__",
  "version": "0.0.1",
  "manifest_version": 2,
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "images/logo.png",
    "128": "images/icon-128.png"
  },
  "default_locale": "en",
  "background": {
    "scripts": [
      "chromereload.js"
    ],
    "persistent": true
  },
  "permissions": [
    "clipboardWrite",
    "unlimitedStorage",
    "notifications",
    "tabs",
    "activeTab",
    "storage",
    "webRequest",
    "*://*.eth/",
    "*://*.google.com/",
    "http://localhost:8545/",
    "https://*.infura.io/"
  ],
  "browser_action": {
    "default_icon": {
      "16": "images/logo.png"
    },
    "default_title": "boilerplate <<Persona || Validator>>",
    "default_popup": "index.html"
  },
  "web_accessible_resources": [
    "images/logo.png"
  ]
}
